<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teammatch">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_tm"
        android:label="TeamMatch"
        android:roundIcon="@mipmap/icon_tm_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.HomePage"
            android:exported="false" />
        <activity android:name=".view.AddProfilePicHost" />
        <activity android:name=".view.AddProfilePicPlayer" />
        <activity android:name=".view.Login" />
        <activity android:name=".view.MoreInfoRiotLoginHost" />
        <activity android:name=".view.MoreInfoRiotLoginPlayer" />
        <activity android:name=".view.Signup" />
        <activity android:name=".view.UserTypeChoosing" />
        <activity
            android:name=".view.Welcome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>